        // Previous page
        function prevPage() {
            if (currentPageIndex > 0) {
                const leftPage = document.getElementById('leftPage');
                leftPage.classList.add('flipping-right');
                
                setTimeout(() => {
                    currentPageIndex -= 2;
                    displayPages();
                    leftPage.classList.remove('flipping-right');
                }, 600);
            }
        }

        // Switch tabs
        function showTab(tab) {
            const tabs = document.querySelectorAll('.tab-btn');
            const sections = document.querySelectorAll('.section');
            
            tabs.forEach(t => t.classList.remove('active'));
            sections.forEach(s => s.classList.remove('active'));
            
            if (tab === 'library') {
                document.querySelector('.tab-btn:first-child').classList.add('active');
                document.getElementById('librarySection').classList.add('active');
            } else {
                document.querySelector('.tab-btn:last-child').classList.add('active');
                document.getElementById('adminSection').classList.add('active');

            tabs.forEach(t => t.classList.toggle('active', t.dataset.target === tab));
            sections.forEach(s => s.classList.toggle('active', s.dataset.tab === tab));

            if (tab === 'map' && map) {
                setTimeout(() => map.invalidateSize(), 150);
            }
        }

        // Keyboard controls
        document.addEventListener('keydown', (e) => {
            if (!currentBook) return;
            
            if (e.key === 'ArrowRight') nextPage();
            if (e.key === 'ArrowLeft') prevPage();
        });

        // Initialize
        loadBooks();
        displayLibrary();
        document.addEventListener('DOMContentLoaded', () => {
            initMap();
            loadBooks();
            displayLibrary();
        });
