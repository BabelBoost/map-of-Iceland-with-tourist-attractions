        function initMap() {
            const mapElement = document.getElementById('icelandMap');
            if (!mapElement) return;

            map = L.map(mapElement, {
                scrollWheelZoom: true,
                attributionControl: false
            }).setView([64.9631, -19.0208], 6);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
                minZoom: 4
            }).addTo(map);

            attractionMarkers = attractions.map((spot, index) => {
                const marker = L.marker(spot.coords)
                    .addTo(map)
                    .bindPopup(`<strong>${spot.name}</strong><br>${spot.description}`);

                marker.on('click', () => highlightAttraction(index));
                return marker;
            });

            renderAttractionList();
        }

        function renderAttractionList() {
            const list = document.getElementById('attractionList');
            if (!list) return;

            list.innerHTML = '';

            attractions.forEach((spot, index) => {
                const card = document.createElement('div');
                card.className = 'attraction-card';
                card.innerHTML = `
                    <h4>${spot.name}</h4>
                    <p>${spot.description}</p>
                    <span class="region-chip">${spot.region}</span>
                `;
                card.onclick = () => focusAttraction(index);
                card.dataset.index = index;
                list.appendChild(card);
            });
        }

        function focusAttraction(index) {
            const spot = attractions[index];
            if (!spot || !map) return;

            map.setView(spot.coords, 8);
            attractionMarkers[index]?.openPopup();
            highlightAttraction(index);
        }

        function highlightAttraction(index) {
            const cards = document.querySelectorAll('.attraction-card');
            cards.forEach(card => card.classList.remove('active'));

            const card = document.querySelector(`.attraction-card[data-index="${index}"]`);
            if (card) {
                card.classList.add('active');
                card.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }

        // Load books from storage
        function loadBooks() {
            const stored = localStorage.getItem('ebookLibrary');
            if (stored) {
                books = JSON.parse(stored);
            } else {
                books = [{
                    id: Date.now(),
                    title: "Sample Ebook",
                    author: "Babel Boost",
                    type: "manual",
                    pages: [
                        { title: "Welcome!", content: "This is a sample ebook. You can delete it and add your own content using the 'Add Ebook' tab.\n\nClick there to add your own ebooks!" },
                        { title: "Instructions", content: "1. Go to 'Add Ebook' tab\n2. Upload a PDF or enter manually\n3. For manual: Enter title and author\n4. Add chapters (manually or import from .txt)\n5. Click 'Save ebook'\n6. Return to library and read!" }
                    ]
                }];
                saveToStorage();
            }
        }

        // Save books to storage
        function saveToStorage() {
            localStorage.setItem('ebookLibrary', JSON.stringify(books));
        }
